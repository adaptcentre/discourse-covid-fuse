<div class="event-item" style="background-color: #{{event.color}};">

  <div class="title">
    {{event.title}}
  </div>

  <div class="experts">

    {{#each event.experts as |expert i| }}
    <a href="/t/{{link event.expertTopicIds i}}" style="color:#{{event.color}};">
      {{expert}}
    </a>
    {{/each}}

  </div>

  <div class="time">
    <div>{{event.time}}</div>
  </div>

</div>

