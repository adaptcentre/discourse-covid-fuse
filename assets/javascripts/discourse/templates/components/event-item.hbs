<div class="event-item">
	
	<div class="icon-wrapper">
		<div class="bubble-container">
			<div class="bubble bubble-right" style="background-color: #{{event.color}}">
				<div class="bubble-content">
					<img src="/plugins/discourse-covid-fuse/images/icons/{{event.icon}}.png">
				</div>
			</div>
		</div>
	</div>

	<div>
		<div class="title">
			{{event.title}}
		</div>
		<div class="expert">
			{{event.expert}}
		</div>
		<div class="time">
			{{event.startDate}} - {{event.endDate}}
		</div>
	</div>

</div>